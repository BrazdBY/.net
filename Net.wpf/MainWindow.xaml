<Window x:Class="Net.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Net.wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="HelloButton" Content="Go!" HorizontalAlignment="Left" Margin="228,217,0,0" VerticalAlignment="Top" Height="29" Width="396" Click="HelloButton_Click"/>
        <TextBox x:Name="HelloTextBox" HorizontalAlignment="Left" Margin="228,114,0,0" TextWrapping="Wrap" Text="Enter the name"
                 VerticalAlignment="Top" Width="396" Height="84" TextChanged="TextBox_TextChanged" FontSize="36" TextAlignment="Center" BorderThickness="8,8,8,8"
                 ClipToBounds="True" GotFocus="HelloTextBox_GotFocus"
                 />

    </Grid>
</Window>
